<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Calibration In Progress"
        app:titleCentered="true"
        app:titleTextColor="@color/colorSecondary" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="GAIN"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/resultTwo_gain"
        app:layout_constraintEnd_toEndOf="@+id/resultTwo_gain"
        app:layout_constraintStart_toStartOf="@+id/resultTwo_gain" />

    <TextView
        android:id="@+id/resultTwo_gain"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@drawable/blue_box"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorSecondary"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/resultTwo_iv"
        app:layout_constraintEnd_toStartOf="@+id/resultTwo_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/resultTwo_iv" />


    <ImageView
        android:id="@+id/resultTwo_iv"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_success"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toStartOf="@+id/resultTwo_offset"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/resultTwo_gain"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="OFFSET"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/resultTwo_offset"
        app:layout_constraintEnd_toEndOf="@+id/resultTwo_offset"
        app:layout_constraintStart_toStartOf="@+id/resultTwo_offset" />

    <TextView
        android:id="@+id/resultTwo_offset"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:background="@drawable/blue_box"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorSecondary"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/resultTwo_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/resultTwo_iv"
        app:layout_constraintTop_toTopOf="@+id/resultTwo_iv" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTwo_iv">

        <Button
            android:id="@+id/resultTwo_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="CONFIRM" />

        <Button
            android:id="@+id/resultTwo_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="CONFIRM" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>