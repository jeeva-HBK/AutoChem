<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/backArrow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@+id/inputNumber_inputSettings"
            app:layout_constraintStart_toStartOf="@+id/inputLabel_inputSettings"
            app:layout_constraintTop_toTopOf="@+id/inputNumber_inputSettings" />

        <!--Input Number-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputNumber_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/inputLabel_inputSettings"
            app:layout_constraintEnd_toEndOf="@+id/sensorType_inputSetting"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/sensorType_inputSetting"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputNumber_tempISEDT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="0123456789"
                android:editable="false"
                android:focusable="false"
                android:hint="Input Number"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Row 1-->
        <!--input Label-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLabel_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tempValue_inputSettings"
            app:layout_constraintEnd_toStartOf="@+id/sensorType_inputSetting"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNumber_inputSettings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputLabel_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Input Label"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Sensor type-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sensorType_inputSetting"
            style="@style/appAutoTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/inputLabel_inputSettings"
            app:layout_constraintEnd_toStartOf="@+id/sensorActivation_inputSettings"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/inputLabel_inputSettings"
            app:layout_constraintTop_toTopOf="@+id/inputLabel_inputSettings">

            <AutoCompleteTextView
                android:id="@+id/sensorType_tempISATXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Sensor Type" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Sensor Activation-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sensorActivation_inputSettings"
            style="@style/appAutoTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/sensorType_inputSetting"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/sensorType_inputSetting"
            app:layout_constraintTop_toTopOf="@+id/sensorType_inputSetting">

            <AutoCompleteTextView
                android:id="@+id/sensorActivation_tempISATXT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Sensor Activation" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--ROW 2-->
        <!--Temp Value-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tempValue_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/alarmLow_inputSettings"
            app:layout_constraintEnd_toEndOf="@+id/inputLabel_inputSettings"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/inputLabel_inputSettings"
            app:layout_constraintTop_toBottomOf="@+id/inputLabel_inputSettings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tempValue_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Temperature Value"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Smoothing Factor-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/smoothingFactor_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tempValue_inputSettings"
            app:layout_constraintEnd_toEndOf="@+id/sensorType_inputSetting"
            app:layout_constraintStart_toStartOf="@+id/sensorType_inputSetting"
            app:layout_constraintTop_toTopOf="@+id/tempValue_inputSettings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/smoothingFactor_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Smoothing Factor"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Calibration Required Alarm-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/calibRequiredAlarm_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/sensorActivation_inputSettings"
            app:layout_constraintStart_toStartOf="@+id/sensorActivation_inputSettings"
            app:layout_constraintTop_toTopOf="@+id/smoothingFactor_inputSettings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/calibRequiredAlarm_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Calibration Required Alarm"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--ROW 3-->
        <!--Low Alarm-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/alarmLow_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/DeleteLayout_tempIS"
            app:layout_constraintEnd_toEndOf="@+id/tempValue_inputSettings"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tempValue_inputSettings"
            app:layout_constraintTop_toBottomOf="@+id/tempValue_inputSettings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/alarmLow_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Alarm Low"
                android:maxLength="7"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--High Alarm-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/alarmHigh_inputSettings"
            style="@style/appEdtTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/smoothingFactor_inputSettings"
            app:layout_constraintStart_toStartOf="@+id/smoothingFactor_inputSettings"
            app:layout_constraintTop_toTopOf="@+id/alarmLow_inputSettings">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/alarmHigh_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Alarm High"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:maxLength="7"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Required Calibration-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/resetCalib_inputSettings"
            style="@style/appAutoTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/alarmHigh_inputSettings"
            app:layout_constraintEnd_toEndOf="@+id/calibRequiredAlarm_inputSettings"
            app:layout_constraintStart_toStartOf="@+id/calibRequiredAlarm_inputSettings"
            app:layout_constraintTop_toTopOf="@+id/alarmHigh_inputSettings">

            <AutoCompleteTextView
                android:id="@+id/resetCalib_tempISEdt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Reset Calibration"
                android:editable="false"
               android:focusableInTouchMode="false" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--saveLayout-->
        <LinearLayout
            android:id="@+id/saveLayout_tempIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/DeleteLayout_tempIS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/DeleteLayout_tempIS"
            app:layout_constraintTop_toTopOf="@+id/DeleteLayout_tempIS">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="Save"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/saveFab_condIS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/colorSecondary"
                android:backgroundTint="@color/colorSecondary"
                android:src="@drawable/ic_round_right"
                app:maxImageSize="50dp"
                app:tint="@color/black" />


        </LinearLayout>

        <!--DeleteLayout-->
        <LinearLayout
            android:id="@+id/DeleteLayout_tempIS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveLayout_tempIS"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarmLow_inputSettings">

            <TextView
                android:id="@+id/save_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="Delete"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/DeleteFab_condIS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/red"
                android:backgroundTint="@color/red"
                android:src="@drawable/ic_baseline_delete"
                app:maxImageSize="35dp"
                app:tint="@color/black" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>