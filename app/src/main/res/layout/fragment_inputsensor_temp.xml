<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Input Number-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputNumber_inputSettings"
        style="@style/appEdtTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/sensorType_inputSetting"
        app:layout_constraintStart_toStartOf="@+id/sensorType_inputSetting"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputNumber_condISEDT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:editable="false"
            android:hint="Input Number"
            android:inputType="number"
            android:maxLength="2"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--Row 1-->
    <!--input Label-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLabel_inputSettings"
        style="@style/appEdtTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@+id/sensorType_inputSetting"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputNumber_inputSettings">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputLabel_condISEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Label"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--Sensor type-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sensorType_inputSetting"
        style="@style/appAutoTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/inputLabel_inputSettings"
        app:layout_constraintEnd_toStartOf="@+id/sensorActivation_inputSettings"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/inputLabel_inputSettings"
        app:layout_constraintTop_toTopOf="@+id/inputLabel_inputSettings">

        <AutoCompleteTextView
            android:id="@+id/sensorType_condISATXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:editable="false"
            android:hint="Sensor Type" />

    </com.google.android.material.textfield.TextInputLayout>

    <!--Sensor Activation-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sensorActivation_inputSettings"
        style="@style/appAutoTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/sensorType_inputSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/sensorType_inputSetting"
        app:layout_constraintTop_toTopOf="@+id/sensorType_inputSetting">

        <AutoCompleteTextView
            android:id="@+id/sensorActivation_condISATXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:editable="false"
            android:clickable="false"
            android:hint="Sensor Activation" />

    </com.google.android.material.textfield.TextInputLayout>




</androidx.constraintlayout.widget.ConstraintLayout>