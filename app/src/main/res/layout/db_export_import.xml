<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20sp"
        android:background="@drawable/ic_back"/>

    <View
        android:id="@+id/import_db"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_import_svgrepo_com"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/export_db"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/import_db"
        app:layout_constraintEnd_toEndOf="@id/import_db"
        app:layout_constraintTop_toBottomOf="@id/import_db"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="IMPORT DATABASE"/>


    <View
        android:id="@+id/export_db"
        android:layout_width="120dp"
        android:layout_height="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/import_db"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_export_svgrepo_com"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/export_db"
        app:layout_constraintEnd_toEndOf="@id/export_db"
        app:layout_constraintTop_toBottomOf="@id/export_db"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="EXPORT DATABASE"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>