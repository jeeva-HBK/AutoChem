<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/backArrow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Row 1-->
            <TableRow
                android:id="@+id/digitalRow1_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Input Number-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_inputNumber"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_weight="1"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/digital_input_number_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Input number"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 2-->
            <TableRow
                android:id="@+id/digitalRow2_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Input Label-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_sensorLabel"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/digital_input_sensor_label_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Input Label"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--Sensor type-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_sensorType"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:enabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/digital_input_sensor_type_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Sensor Type" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--Interlock-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_InnerLock"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/digital_input_sensor_inner_lock_act"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="InterLock"
                        android:maxLength="15" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 3-->
            <TableRow
                android:id="@+id/digitalRow3_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--openMessage-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_openMessage"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/digital_input_sensor_open_message_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Open Message"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="15" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--closeMessage-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_closeMessage"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/digital_input_sensor_close_message_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Close Message"
                        android:imeOptions="actionNext"
                        android:inputType="textPersonName"
                        android:maxLength="15" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--resetTime-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_ResetTime"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/digital_input_sensor_reset_time_act"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Reset Time"
                        android:maxLength="15" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 4-->
            <TableRow
                android:id="@+id/digitalRow4_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--totalTime-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_TotalTime"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/digital_input_sensor_total_time_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Total Time"
                        android:imeOptions="actionDone"
                        android:inputType="textPersonName"
                        android:maxLength="15" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--alarm-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_alarm"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/digital_input_sensor_alarm_act"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Alarm" />
                </com.google.android.material.textfield.TextInputLayout>

                <!--sensorActivation-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/digital_sensorActivation"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/digital_input_sensor_sensor_activation_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Sensor Activation"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 5-->
            <TableRow
                android:id="@+id/digitalRow5_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--saveLayout-->
                <LinearLayout
                    android:id="@+id/saveLayout_inputSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/save_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_vertical"
                        android:text="Save"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/saveFab_inputSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/colorSecondary"
                        android:backgroundTint="@color/colorSecondary"
                        android:src="@drawable/ic_round_right"
                        app:maxImageSize="50dp"
                        app:tint="@color/black" />


                </LinearLayout>

                <!--DeleteLayout-->
                <LinearLayout
                    android:id="@+id/DeleteLayout_inputSettings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Delete"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/DeleteFab_inputSettings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/red"
                        android:backgroundTint="@color/red"
                        android:src="@drawable/ic_baseline_delete"
                        app:maxImageSize="35dp"
                        app:tint="@color/black" />


                </LinearLayout>

            </TableRow>


        </TableLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>