<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Layout Analog-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.03"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.03" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--Row 1-->
            <TableRow
                android:id="@+id/analogRow1_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Input Number-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_inputNumber"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_input_number_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Input Number">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 2-->
            <TableRow
                android:id="@+id/analogRow2_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Input Label-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_inputLabel"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_input_label_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Input Label"
                        android:imeOptions="actionNext"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Sensor Type-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_sensorType"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:enabled="false">

                    <AutoCompleteTextView
                        android:id="@+id/analog_sensor_type_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Sensor Type"
                        android:maxLines="1">

                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>

                <!--Analog Type-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_analogType"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/analog_type_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Analog Type"
                        android:maxLines="1">

                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 3-->
            <TableRow
                android:id="@+id/analogRow3_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Unit Of Measurement-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_unit"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/analog_unit_measurement_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Unit Measurement"
                        android:maxLines="1">

                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>

                <!--Min Value-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_minValue"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_min_value_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Min Value"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <!--Max Value-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_maxValue"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_max_value_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Max Value"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 4-->
            <TableRow
                android:id="@+id/analogRow4_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Alarm Low-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_alarmLow"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_alarm_low_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Low Alarm"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:maxLines="1">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <!--Alarm High-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_alarmHigh"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_high_low_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="High Alarm"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:maxLength="7"
                        android:maxLines="1">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <!--Calib Alarm Required-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_calibAlarmRequired"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_calibration_required_alarm_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Calibration Required Alarm"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="3">

                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 5-->
            <TableRow
                android:id="@+id/analogRow5_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--Smoothing Factor-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_smoothingFactor"
                    style="@style/appEdtTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/analog_smoothing_factor_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Smoothing Factor"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--Reset Calibration-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_resetCalibration"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/analog_reset_calibration_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Reset Calibration">

                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>

                <!--Sensor Activation-->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/analog_sensorActivation"
                    style="@style/appAutoTxt"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_margin="3dp"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:id="@+id/analog_sensor_activation_tie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="false"
                        android:editable="false"
                        android:focusable="false"
                        android:hint="Sensor Activation"
                        android:maxLines="1">

                    </AutoCompleteTextView>
                </com.google.android.material.textfield.TextInputLayout>

            </TableRow>

            <!--Row 6-->
            <TableRow
                android:id="@+id/analog_Row6_isc"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="3">

                <!--saveLayout-->
                <LinearLayout
                    android:id="@+id/saveLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/save_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_vertical"
                        android:text="Save"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/saveFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/colorSecondary"
                        android:backgroundTint="@color/colorSecondary"
                        android:src="@drawable/ic_round_right"
                        app:maxImageSize="50dp"
                        app:tint="@color/black" />


                </LinearLayout>

                <!--DeleteLayout-->
                <LinearLayout
                    android:id="@+id/deleteLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="center"
                        android:text="Delete"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/deleteFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@color/red"
                        android:backgroundTint="@color/red"
                        android:src="@drawable/ic_baseline_delete"
                        app:maxImageSize="35dp"
                        app:tint="@color/black" />


                </LinearLayout>

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>