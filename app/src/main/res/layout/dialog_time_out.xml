<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="Screen session will close in"
        app:layout_constraintBottom_toTopOf="@id/bg_background"
        app:layout_constraintEnd_toEndOf="@id/bg_background"
        app:layout_constraintStart_toStartOf="@id/bg_background" />

    <View
        android:id="@+id/bg_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:visibility="invisible"
        android:background="@drawable/blue_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_timeout_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary"
        android:textSize="70sp"
        android:text="50"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/bg_background"
        app:layout_constraintEnd_toEndOf="@id/bg_background"
        app:layout_constraintStart_toStartOf="@id/bg_background"
        app:layout_constraintTop_toTopOf="@id/bg_background" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorSecondary"
        android:text="Cancel"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/bg_background"
        app:layout_constraintStart_toStartOf="@id/bg_background"
        app:layout_constraintTop_toBottomOf="@id/bg_background" />


</androidx.constraintlayout.widget.ConstraintLayout>