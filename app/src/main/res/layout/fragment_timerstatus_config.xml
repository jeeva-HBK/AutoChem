<?xml version="1.0" encoding="UTF-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <View
            android:id="@+id/view_select_day"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_timer_status_rectangle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <View
            android:id="@+id/view_select_day_header"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2.5dp"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="@id/view_select_day"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintStart_toStartOf="@id/view_select_day"
            app:layout_constraintTop_toTopOf="@id/view_select_day"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Days"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_select_day_header"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toStartOf="@id/view_select_day_header"
            app:layout_constraintTop_toTopOf="@id/view_select_day_header" />

        <TextView
            android:id="@+id/txt_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="MONDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_tuesday"
            app:layout_constraintStart_toStartOf="@id/view_select_day_header"
            app:layout_constraintTop_toBottomOf="@id/view_select_day_header" />

        <View
            android:id="@+id/view_timer_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_monday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@+id/view_select_day"
            app:layout_constraintTop_toTopOf="@id/txt_monday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon" />

        <TextView
            android:id="@+id/txt_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="TUESDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_wednesday"
            app:layout_constraintStart_toStartOf="@id/txt_monday"
            app:layout_constraintTop_toBottomOf="@id/txt_monday" />

        <View
            android:id="@+id/view_timer_icon_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_tuesday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/view_select_day"
            app:layout_constraintTop_toTopOf="@id/txt_tuesday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon_1"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon_1"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon_1" />

        <TextView
            android:id="@+id/txt_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="WEDNESDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_thursday"
            app:layout_constraintStart_toStartOf="@id/txt_tuesday"
            app:layout_constraintTop_toBottomOf="@id/txt_tuesday" />

        <View
            android:id="@+id/view_timer_icon_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_wednesday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/view_select_day"
            app:layout_constraintTop_toTopOf="@id/txt_wednesday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon_2"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon_2"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon_2" />

        <TextView
            android:id="@+id/txt_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="THURSDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_friday"
            app:layout_constraintStart_toStartOf="@id/txt_wednesday"
            app:layout_constraintTop_toBottomOf="@id/txt_wednesday" />

        <View
            android:id="@+id/view_timer_icon_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_thursday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/txt_thursday"
            app:layout_constraintTop_toTopOf="@id/txt_thursday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon_3"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon_3"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon_3" />

        <TextView
            android:id="@+id/txt_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="FRIDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_saturday"
            app:layout_constraintStart_toStartOf="@id/txt_thursday"
            app:layout_constraintTop_toBottomOf="@id/txt_thursday" />

        <View
            android:id="@+id/view_timer_icon_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_friday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/txt_friday"
            app:layout_constraintTop_toTopOf="@id/txt_friday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon_4"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon_4"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon_4" />

        <TextView
            android:id="@+id/txt_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SATURDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/txt_sunday"
            app:layout_constraintStart_toStartOf="@id/txt_friday"
            app:layout_constraintTop_toBottomOf="@id/txt_friday" />

        <View
            android:id="@+id/view_timer_icon_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_saturday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/txt_saturday"
            app:layout_constraintTop_toTopOf="@id/txt_saturday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon_5"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon_5"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon_5" />

        <TextView
            android:id="@+id/txt_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="SUNDAY"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_select_day"
            app:layout_constraintStart_toStartOf="@id/txt_saturday"
            app:layout_constraintTop_toBottomOf="@id/txt_saturday" />

        <View
            android:id="@+id/view_timer_icon_6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/timer"
            app:layout_constraintBottom_toBottomOf="@id/txt_sunday"
            app:layout_constraintEnd_toEndOf="@id/view_select_day"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/txt_sunday"
            app:layout_constraintTop_toTopOf="@id/txt_sunday" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_icon_6"
            app:layout_constraintEnd_toEndOf="@id/view_select_day_header"
            app:layout_constraintStart_toEndOf="@id/view_timer_icon_6"
            app:layout_constraintTop_toTopOf="@id/view_timer_icon_6" />

        <View
            android:id="@+id/view_timer_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_timer_status_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/view_output"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view_select_day" />

        <View
            android:id="@+id/view_timer_header"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2.5dp"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_name"
            app:layout_constraintEnd_toEndOf="@id/view_timer_name"
            app:layout_constraintStart_toStartOf="@id/view_timer_name"
            app:layout_constraintTop_toTopOf="@id/view_timer_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer Name"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_header"
            app:layout_constraintEnd_toEndOf="@id/view_timer_header"
            app:layout_constraintStart_toStartOf="@id/view_timer_header"
            app:layout_constraintTop_toTopOf="@id/view_timer_header" />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_timer_name_value"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/view_timer_name"
            app:layout_constraintEnd_toEndOf="@id/view_timer_name"
            app:layout_constraintStart_toStartOf="@id/view_timer_name"
            app:layout_constraintTop_toBottomOf="@id/txt_header_name">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/white_emptybox"
                android:clickable="false"
                android:completionThreshold="0"
                android:cursorVisible="false"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/primary" />

        </com.google.android.material.textfield.TextInputLayout>

        <View
            android:id="@+id/view_output"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_timer_status_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/view_mode"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/view_timer_name"
            app:layout_constraintTop_toBottomOf="@+id/view_timer_name" />

        <View
            android:id="@+id/view_output_header"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2.5dp"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="@id/view_output"
            app:layout_constraintEnd_toEndOf="@id/view_output"
            app:layout_constraintStart_toStartOf="@id/view_output"
            app:layout_constraintTop_toTopOf="@id/view_output"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_header_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_output_header"
            app:layout_constraintEnd_toEndOf="@id/view_output_header"
            app:layout_constraintStart_toStartOf="@id/view_output_header"
            app:layout_constraintTop_toTopOf="@id/view_output_header" />

        <TextView
            android:id="@+id/txt_output_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GP02 ORP"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_output"
            app:layout_constraintEnd_toEndOf="@id/view_output"
            app:layout_constraintStart_toStartOf="@id/view_output"
            app:layout_constraintTop_toBottomOf="@id/view_output_header" />

        <View
            android:id="@+id/view_mode"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_timer_status_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/view_flow_sensor"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/view_output"
            app:layout_constraintTop_toBottomOf="@+id/view_output" />

        <View
            android:id="@+id/view_mode_header"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2.5dp"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="@id/view_mode"
            app:layout_constraintEnd_toEndOf="@id/view_mode"
            app:layout_constraintStart_toStartOf="@id/view_mode"
            app:layout_constraintTop_toTopOf="@id/view_mode"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_header_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_mode_header"
            app:layout_constraintEnd_toEndOf="@id/view_mode_header"
            app:layout_constraintStart_toStartOf="@id/view_mode_header"
            app:layout_constraintTop_toTopOf="@id/view_mode_header" />

        <TextView
            android:id="@+id/txt_mode_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORP/BIO-TIMER"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_mode"
            app:layout_constraintEnd_toEndOf="@id/view_mode"
            app:layout_constraintStart_toStartOf="@id/view_mode"
            app:layout_constraintTop_toBottomOf="@id/view_mode_header" />

        <View
            android:id="@+id/view_flow_sensor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_timer_status_rectangle"
            app:layout_constraintBottom_toTopOf="@+id/txt_weeks"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/view_mode"
            app:layout_constraintTop_toBottomOf="@+id/view_mode" />

        <View
            android:id="@+id/view_flow_sensor_header"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_margin="2.5dp"
            android:background="@color/primary"
            app:layout_constraintBottom_toBottomOf="@id/view_flow_sensor"
            app:layout_constraintEnd_toEndOf="@id/view_flow_sensor"
            app:layout_constraintStart_toStartOf="@id/view_flow_sensor"
            app:layout_constraintTop_toTopOf="@id/view_flow_sensor"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_header_flow_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flow Sensor"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_flow_sensor_header"
            app:layout_constraintEnd_toEndOf="@id/view_flow_sensor_header"
            app:layout_constraintStart_toStartOf="@id/view_flow_sensor_header"
            app:layout_constraintTop_toTopOf="@id/view_flow_sensor_header" />

        <TextView
            android:id="@+id/txt_flow_sensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flow sensor"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/view_flow_sensor"
            app:layout_constraintEnd_toEndOf="@id/view_flow_sensor"
            app:layout_constraintStart_toStartOf="@id/view_flow_sensor"
            app:layout_constraintTop_toBottomOf="@id/view_flow_sensor_header" />

        <TextView
            android:id="@+id/txt_weeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Weeks"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/week_checkbox_1"
            app:layout_constraintStart_toStartOf="@id/view_flow_sensor"
            app:layout_constraintTop_toBottomOf="@+id/view_flow_sensor" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/week_checkbox_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_checkbox_1"
            android:button="@null"
            app:layout_constraintBottom_toTopOf="@+id/txt_accesory_timmer"
            app:layout_constraintStart_toStartOf="@id/txt_weeks"
            app:layout_constraintTop_toBottomOf="@+id/txt_weeks" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/week_checkbox_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8sp"
            android:background="@drawable/bg_checkbox_2"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@id/week_checkbox_1"
            app:layout_constraintTop_toTopOf="@+id/week_checkbox_1" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/week_checkbox_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8sp"
            android:background="@drawable/bg_checkbox_3"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@id/week_checkbox_2"
            app:layout_constraintTop_toTopOf="@+id/week_checkbox_2" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/week_checkbox_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8sp"
            android:background="@drawable/bg_checkbox_4"
            android:button="@null"
            app:layout_constraintStart_toEndOf="@id/week_checkbox_3"
            app:layout_constraintTop_toTopOf="@+id/week_checkbox_3" />

        <TextView
            android:id="@+id/txt_accesory_timmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="AccessoryTimer"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Accessory_checkbox_1"
            app:layout_constraintStart_toStartOf="@id/view_flow_sensor"
            app:layout_constraintTop_toBottomOf="@+id/week_checkbox_1" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/Accessory_checkbox_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_checkbox_1"
            android:button="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/txt_accesory_timmer"
            app:layout_constraintTop_toBottomOf="@+id/txt_accesory_timmer" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/Accessory_checkbox_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_checkbox_2"
            android:button="@null"
